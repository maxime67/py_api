# ===========================================
# Configuration de l'application FastAPI
# Copiez ce fichier vers .env et adaptez les valeurs
# ===========================================

# Environnement (development, staging, production)
ENVIRONMENT=development

# Configuration du serveur
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=info

# Configuration de la base de données
# SQLite (développement local) :
DATABASE_URL=sqlite+aiosqlite:///./local_dev.db
# PostgreSQL (production) :
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# Options de la base de données
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_POOL_RECYCLE=3600

# Seeding (désactiver en production)
SEED_DATABASE=true

# Métadonnées de l'API
PROJECT_NAME=API Filmotheque
API_V1_STR=/api/v1
